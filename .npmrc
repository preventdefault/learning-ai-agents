; Enforce consistent dependency versions
save-exact=true

; Keep npm using the official registry
registry=https://registry.npmjs.org/

; Ensure downloads require valid HTTPS certificates
strict-ssl=true

; Run security advisories automatically after installs
audit=true

; Block installs if npm audit finds high-severity vulnerabilities
audit-level=high

; Silence donation prompts in automated environments
fund=false

; Skip running lifecycle scripts during install when needed
ignore-scripts=true

; Reduce noise while keeping important warnings visible
loglevel=warn

